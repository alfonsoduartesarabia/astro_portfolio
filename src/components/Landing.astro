const {socials, contacts, skills, resume} = site;
import SkillsItem from '../components/SkillsItem.astro';
---			
    <div class="flex flex-col-reverse lg:flex-row space-x-4 mx-auto lg:py-12 container">
        <div class="font-mono p-3 md:p-24 lg:p-8">
            <!-- <div class="p-8"> -->
                <h2 class="font-extrabold text-teal-400 underline deocoration-indigo-500 text-2xl xl:text-3xl">{SITE_TITLE}</h2>
                <h1 class="text-stone-400">I am a software developer and recent graduate</h1>
